<h1>Books List</h1>
  
 <table class="table  table-bordered table-hover">
    <thead class="thead-dark table-dark">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Publication Date</th>
        <th>Price</th>
        <th colspan="3"> </th>
      </tr>
    </thead>
    <tbody>
      <div id="books">
        <% @books.each do |book| %> 
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.publication_date %></td>
            <td><%= book.price %></td>
            <td><%= link_to "Show", book , class: "btn btn-outline-primary btn-sm" %></td>
            <td><%= link_to "Edit", edit_book_path(book), class: "btn btn-outline-primary btn-sm" %></td>
            <td><%= link_to "Delete", book, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },  class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      </div>
      </tbody>
  </table>
<%= link_to "New book", new_book_path, class:"btn btn-secondary" %>

  
